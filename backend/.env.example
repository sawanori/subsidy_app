# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000
# Optional: set a global API prefix (e.g., api -> /api/...)
API_PREFIX=

# Database Configuration
# For production: Use Neon PostgreSQL with AES256 encryption
DATABASE_URL="postgresql://username:password@host.neon.tech/dbname?sslmode=require"

# Test Database (optional - uses DATABASE_URL if not set)
TEST_DATABASE_URL="postgresql://test:test@localhost:5432/subsidy_test"

# JWT
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRATION=24h

# S3 Compatible Storage
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET=gp-dev
S3_REGION=us-east-1
S3_ENDPOINT=https://s3.amazonaws.com

# Security (per governance.yaml)
RATE_LIMIT_TTL=300000  # 5 minutes
RATE_LIMIT_MAX=100     # 100 req/5min/IP
GENERATE_RATE_LIMIT_MAX=10  # 10 req/5min for /generate endpoint

# Data Retention (compliance)
PERSONAL_DATA_RETENTION_MONTHS=12
LOG_RETENTION_DAYS=90

# Internationalization (personal data classification)
SUPPORTED_LOCALES="ja,en,zh-CN,ko"
DEFAULT_LOCALE="ja"

# Security Headers
CSP_POLICY="default-src 'self'; img-src 'self' data: blob:"

# AI Integration (OpenAI)
# Set USE_MOCK_LLM=true to use mock responses without API key (for development)
USE_MOCK_LLM=true

# OpenAI API Key (required for production, optional for development with USE_MOCK_LLM=true)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Public Statistics APIs
# e-Stat API (https://www.e-stat.go.jp/api/)
ESTAT_APP_ID=your_estat_application_id

# RESAS API (https://opendata.resas-portal.go.jp/)
RESAS_API_KEY=your_resas_api_key

# Supabase Configuration
SUPABASE_URL=https://wcxjtqzekllzjpxbbicj.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# Storage Configuration
# Set to 'true' for production to use Supabase Storage
# Set to 'false' for local development to use local file storage
USE_SUPABASE_STORAGE=false

# Database Connection (Development mode)
# Set to 'true' to skip database connection (useful for frontend-only development)
SKIP_DB_CONNECTION=false
